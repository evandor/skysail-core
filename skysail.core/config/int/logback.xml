<configuration scan="true" debug="true">

	<logger name="org.eclipse.jetty" level="WARN" />
	<logger name="io.skysail.server.converter.impl" level="DEBUG" />
	<logger name="akka.event.slf4j.Slf4jLogger" level="WARN" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<encoder>
			<!--%d{mm:ss.SSS} [%thread] -->
			<pattern>%date{"HH:mm:ss,SSS"} %-5level [%-30logger{30}] - %msg [%X{sourceThread}]/[%X{akkaSource}] %n</pattern>
		</encoder>
	</appender>

	<appender name="WARN_FILE" class="ch.qos.logback.core.FileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
		<file>etc/logs/warn.log</file>
		<append>false</append>
		<encoder>
			<pattern>%date{"yyyy-MM-dd HH:mm:ss,SSS"} %-5level [%-45logger{40}] - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="INFO_FILE" class="ch.qos.logback.core.FileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<file>etc/logs/info.log</file>
		<append>false</append>
		<encoder>
			<pattern>%date{"yyyy-MM-dd HH:mm:ss,SSS"} %-5level [%-45logger{40}] - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="DEBUG_FILE" class="ch.qos.logback.core.FileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>
		<file>etc/logs/debug.log</file>
		<append>false</append>
		<encoder>
			<pattern>%date{"yyyy-MM-dd HH:mm:ss,SSS"} %-5level [%-45logger{40}] - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="graylogAppender" class="me.moocar.logbackgelf.GelfUDPAppender">
		<remoteHost>172.17.0.1</remoteHost>
		<port>12201</port>
		<encoder class="me.moocar.logbackgelf.GZIPEncoder">
			<layout class="me.moocar.logbackgelf.GelfLayout">
				<useLoggerName>true</useLoggerName>
				<useThreadName>true</useThreadName>
				<useMarker>true</useMarker>
				<includeFullMDC>true</includeFullMDC>

				<staticField class="me.moocar.logbackgelf.Field">
					<key>env</key>
					<value>${kvb.env}</value> <!-- SYSTEM VARIABLE -->
				</staticField>

				<staticField class="me.moocar.logbackgelf.Field">
					<key>application</key>
					<value>skysail-server</value>
				</staticField>

				<staticField class="me.moocar.logbackgelf.Field">
				  <key>stage</key>
				  <value>INT</value>
				</staticField>

            </layout>
		</encoder>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="INFO_FILE" />
		<appender-ref ref="DEBUG_FILE" />
		<appender-ref ref="WARN_FILE" />
		<appender-ref ref="graylogAppender"/>
	</root>

</configuration>